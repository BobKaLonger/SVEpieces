{
	"Format": "2.6.0",

	"ConfigSchema": {
		"Barn to Upgrade": {
			"AllowValues": "SVE Premium Barn, Jen's Mega Barn, Gigantic Barn, Vanilla Deluxe Barn, Add Building",
			"Default": "SVE Premium Barn"
		},
		"Coop to Upgrade": {
			"AllowValues": "SVE Premium Coop, Jen's Mega Coop, Resource Chickens Giant Coop, Gigantic Coop, Vanilla Deluxe Coop, Add Building",
			"Default": "SVE Premium Coop"
		}
	},

    "Changes": [

        //Load Spacious Set
        {
            "Action": "Load",
            "Target": "Buildings/spacious_SpaciousBarn",
            "FromFile": "assets/SpaciousBarn.png"
        },
        {
            "Action": "Load",
            "Target": "Buildings/spacious_SpaciousCoop",
            "FromFile": "assets/SpaciousCoop.png"
        },
        {
            "Action": "Load",
            "Target": "Maps/spacious_SpaciousBarn",
            "FromFile": "assets/SpaciousBarn.tmx"
        },
        {
            "Action": "Load",
            "Target": "Maps/spacious_SpaciousCoop",
            "FromFile": "assets/SpaciousCoop.tmx"
        },
        {
            "Action": "Load",
            "Target": "Buildings/spacious_SpaciousBarn_PaintMask",
            "FromFile": "assets/SpaciousBarn_PaintMask.png"
        },
        {
            "Action": "Load",
            "Target": "Buildings/spacious_SpaciousCoop_PaintMask",
            "FromFile": "assets/SpaciousCoop_PaintMask.png"
        },
        {
            "Action": "EditData",
            "Target": "Data/PaintData",
            "Entries": {
		        "bobkalonger.spaciouscoopnbarnCP_SpaciousBarn": "Building/-10 0/Roof/-10 5/Trim/-5 0"
            }
	    },
        {
            "Action": "EditData",
            "Target": "Data/PaintData",
            "Entries": {
				"bobkalonger.spaciouscoopnbarnCP_SpaciousCoop": "Building/-12 0/Roof/-10 5/Trim/-10 5"
		    }
	    },

        //Load SuperDense Set

        {
            "Action": "Load",
            "Target": "Maps/spacious_SuperDenseBarn",
            "FromFile": "assets/SuperDenseBarn.tmx"
        },
        {
            "Action": "Load",
            "Target": "Maps/spacious_SuperDenseCoop",
            "FromFile": "assets/SuperDenseCoop.tmx"
        },
        {
            "Action": "EditData",
            "Target": "Data/PaintData",
            "Entries": {
	            "bobkalonger.spaciouscoopnbarnCP_SuperDenseBarn": "Building/-15 0/Roof/-10 5/Trim/-10 5"
            }
        },
        {
            "Action": "EditData",
            "Target": "Data/PaintData",
            "Entries": {
	            "bobkalonger.spaciouscoopnbarnCP_SuperDenseCoop": "Building/-25 0/Roof/-15 5/Trim/-25 0"
            }
        },

        //Barn Config Breakouts

        {
            "Action": "Include",
            "FromFile": "code/Buildings/SVE_PremiumBarn.json",
            "When": {
                "Barn to Upgrade": "SVE Premium Barn"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/JMCB_MegaBarn.json",
            "When": {
                "Barn to Upgrade": "Jen's Mega Barn"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/GiganticBarn.json",
            "When": {
                "Barn to Upgrade": "Gigantic Barn"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/Vanilla_DeluxeBarn.json",
            "When": {
                "Barn to Upgrade": "Vanilla Deluxe Barn"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/ADDNEW_SpaciousBarn.json",
            "When": {
                "Barn to Upgrade": "Add Building"
            }
        },

        //Coop config Breakouts

        {
            "Action": "Include",
            "FromFile": "code/Buildings/SVE_PremiumCoop.json",
            "When": {
                "Coop to Upgrade": "SVE Premium Coop"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/JMCB_MegaCoop.json",
            "When": {
                "Coop to Upgrade": "Jen's Mega Coop"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/RC_GiantCoop.json",
            "When": {
                "Coop to Upgrade": "Resource Chickens Giant Coop"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/GiganticCoop.json",
            "When": {
                "Coop to Upgrade": "Gigantic Coop"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/Vanilla_DeluxeCoop.json",
            "When": {
                "Coop to Upgrade": "Vanilla Deluxe Coop"
            }
        },
        {
            "Action": "Include",
            "FromFile": "code/Buildings/ADDNEW_SpaciousCoop.json",
            "When": {
                "Coop to Upgrade": "Add Building"
            }
        }
    ]
}
